{
  "name": "react-component-boilerplate",
  "description": "",
  "author": "",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/nerdo/react-component-boilerplate.git"
  },
  "version": "1.0.0-alpha.0",
  "main": "dist/react-component-boilerplate.js",
  "umd:main": "dist/react-component-boilerplate.umd.js",
  "module": "dist/react-component-boilerplate.m.js",
  "esmodule": "dist/react-component-boilerplate.modern.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "test": "jest",
    "dev": "concurrently npm:watch:dev npm:serve",
    "serve": "serve -S dev/serve",
    "build": "microbundle --jsx React.createElement",
    "watch": "microbundle --jsx React.createElement -w",
    "watch:dev": "microbundle --jsx React.createElement -w -i dev/index.tsx -o dev/serve/build/dev.js -f umd --compress false --pkg-main false --globals react=React,react-dom=ReactDOM",
    "prepublishOnly": "jest && microbundle --jsx React.createElement"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^10.4.2",
    "@testing-library/user-event": "^11.4.2",
    "@types/jest": "^26.0.3",
    "babel-jest": "^26.1.0",
    "concurrently": "^5.2.0",
    "jest": "^26.1.0",
    "microbundle": "^0.12.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "serve": "^11.3.2",
    "standard": "^14.3.4"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
